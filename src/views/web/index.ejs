<%- include('../partials/head') %> 
<body>
  <div class="container-fluid">
    <header>
        <%- include('../partials/header')  %>
    </header>
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/img/slider_001.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/img/slider_002.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/img/slider_003.jpg" class="d-block w-100" alt="...">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    <br>
    <main>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
              <h1 class="text-center">Productos en Oferta</h1>
          </div>
        </div>
        <div class="container">
          <hr>
        <div class="row">
          <%  categorias.forEach(function(categoria){ %>
            <% producto.forEach(function(producto){ 
            if(producto.category_id == categoria.id & producto.price <= 900){ %>
                <div class="col-auto">
                    <div class="card" style="width: 15rem;">
                        <div class="card-body">
                        <a href="/products/detail/<%= producto.id %>">
                            <img src="img/<%= producto.image  %>" class="card-img-top" alt="<%= producto.name  %>">
                        </a>
                        <h5 class="card-title"><%= producto.name  %></h5>
                        <p class="card-text">$ <%= toThousand(producto.price)  %></p>
                        <a href="/products/detail/<%= producto.id %>" class="btn btn-success">Ver Detalles</a>
                        </div>
                    </div>
                <br>
                </div>
            <% } %>
        <% })}); %>
        </div>
        </div>
      </div>
    </main>
    <script src="js/slider.js"></script>
    <footer>
      <%- include('../partials/footer'); %>
    </footer>
  </div>
</body>
</html>